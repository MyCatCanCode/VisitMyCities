@model VisitMyCities.DataModel.BusinessObjects.Utilisateur

@{
    ViewData["Title"] = "Profil Utilisateur";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>VisitMyCity</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <!-- Third party plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <h1 style="margin-bottom:50px; margin-top:100px">Mon profil utilisateur</h1>

    <div>
        <hr />
        @*<dl class="row">
            <dt class="col-sm-2">
                Mon profil utilisateur
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Utilisateur.NomUtilisateur)
            </dd>
        </dl>
        <button type="submit" class="btn-success">Ajouter un bâtiment</button>*@

        <div class="card-deck" style="margin:20px">

           
                <div style="width:800px; border: 1px;">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@Html.DisplayFor(model => model.UserName) </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div id="userProfile" class="col-sm-6">
                                    <div class="card-title"></div>
                                    <div style="text-align: center;">
                                        <img src="~/assets/img/avatar_1280.png" style="width:200px;margin-bottom:20px;" />
                                    </div>
                                    <div>
                                        Nom : @Html.DisplayFor(model => model.NomUtilisateur)
                                    </div>

                                    <div>
                                        Prénom : @Html.DisplayFor(model => model.PrenomUtilisateur)
                                    </div>

                                    <div>
                                        Adresse mail : @Html.DisplayFor(model => model.NormalizedEmail)
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h3>Mes listes de voyage</h3>
                                    @foreach (VisitMyCities.DataModel.BusinessObjects.ListeDeVoyage item in Model.ListesDeVoyage)
                                    {
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">@item.TitreListe</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <img src="~/@item.Ville.Blason" style="width:30px" />
                                            </div><!-- <div class="col-sm-3">-->
                                            <div class="col-sm-9">
                                                <div class="card-title">@item.Ville.NomVille</div>
                                            </div><!-- <div class="col-sm-9">-->
                                        </div><!-- <div class="row">-->
                                        </div>
                                    </div>
                                    }
                                </div><!-- <div class="col-sm-6">-->
                            </div><!-- <div class="row">-->
                        </div>
                        <div class="card-footer">
                            @*<div class="card-title">@item.Ville.NomVille</div>*@
                            <button type="submit" class="btn-success">Modifier</button>
                        </div>

                    </div>
                </div>

            
        </div>
    </div>
    <div>
        @*<a asp-action="Edit" asp-route-id="@Model.ListeDeVoyage.IdListe">Modifier</a> |
        <a asp-action="Index">Retour</a>*@
    </div>
    <p>
        
        <a asp-action="Create">Retour à l'accueil</a>
    </p>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/site.js"></script>
</body>