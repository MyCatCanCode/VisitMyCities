@model VisitMyCities.DataModel.BusinessObjects.ListeDeVoyage

@{
    ViewData["Title"] = "Edit";
}

<h3>Modifier cette liste</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdListe" />
            <div class="form-group">
                <label asp-for="TitreListe" class="control-label"></label>
                <input asp-for="TitreListe" class="form-control" />
                <span asp-validation-for="TitreListe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionListe" class="control-label"></label>
                <input asp-for="DescriptionListe" class="form-control" />
                <span asp-validation-for="DescriptionListe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
