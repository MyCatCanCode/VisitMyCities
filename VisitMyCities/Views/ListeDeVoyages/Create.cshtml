@model VisitMyCities.DataModel.BusinessObjects.ListeDeVoyage

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>VisitMyCity</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <!-- Third party plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="masthead">
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0">Proposer une nouvelle aventure</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Titre de votre liste</label>
                                <input asp-for="TitreListe" class="form-control" />
                                <span asp-validation-for="TitreListe" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Ville</label>
                                <select asp-for="VilleId" class="form-control" asp-items="ViewBag.VilleId"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ajouter un lien photo</label>
                                <input asp-for="URLBlason" class="form-control" />
                                <span asp-validation-for="URLBlason" class="text-danger"></span>
                            </div>
                            

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
