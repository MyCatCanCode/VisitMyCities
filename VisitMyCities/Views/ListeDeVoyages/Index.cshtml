    <h1 style="margin-bottom:50px; margin-top:100px">Mes balades favorites</h1>

    <p>
        <img src="~/assets/img/button-304224_640.png" style="width:50px" />
        <a asp-action="Create">Ajouter une liste</a>
    </p>


    <div class="card-deck">
        @foreach (VisitMyCities.DataModel.BusinessObjects.ListeDeVoyage item in Model)
        {
            <div class="card-listevoyage" style="width:300px; text-align:center; border: 1px;">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">@item.TitreListe</div>
                    </div>
                    <div class="card-body">
                        <div class="card-title"></div>
                        <img src="~/@item.Ville.Blason" style="width:150px" />

                    </div>
                    <div class="card-footer">
                        <div class="card-title">@item.Ville.NomVille</div>
                    </div>
                    @Html.ActionLink("Details", "Details", new { id = item.IdListe }, new { @class = "btn btn-info float-right" })


                </div>
            </div>

        }

    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/site.js"></script>
