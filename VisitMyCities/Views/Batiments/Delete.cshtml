@model VisitMyCities.DataModel.BusinessObjects.Batiment


@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>VisitMyCity</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <!-- Third party plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="masthead">
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0">Supprimer ce bâtiment ?</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.NomBatiment)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NomBatiment)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.URLPhoto)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.URLPhoto)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.TypeBatiment)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TypeBatiment)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DescriptionBatiment)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DescriptionBatiment)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Longitude)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Longitude)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Latitude)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Latitude)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.MonumentHistorique)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.MonumentHistorique)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DateConstruction)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DateConstruction)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Ville)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Ville.NomVille)
                    </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BatimentId" />
                        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                        <a asp-action="Index">Retour</a>
                    </form>
                </div>
            </div>
        </div>
    </header>
</body>